<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- work, movies, movies_content, series — один changeSet -->
    <changeSet id="002-create-work-and-film-tables" author="english-movies">
        <createTable tableName="work">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="VARCHAR(20)" defaultValue="ENGLISH">
                <constraints nullable="false"/>
            </column>
            <column name="content_key" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="work" columnNames="content_key" constraintName="uq_work_content_key"/>
        <createTable tableName="movies">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="work_id" type="BIGINT">
                <constraints nullable="false" unique="true" references="work(id)" foreignKeyName="fk_movies_work"/>
            </column>
            <column name="director" type="VARCHAR(255)"/>
            <column name="year" type="INTEGER"/>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <createTable schemaName="englishmovies" tableName="movies_content">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="movie_id" type="BIGINT">
                <constraints nullable="false" unique="true" references="movies(id)" foreignKeyName="fk_movies_content_movie"/>
            </column>
            <column name="content" type="JSONB"/>
            <column name="credits" type="JSONB"/>
            <column name="note" type="TEXT"/>
        </createTable>
        <createTable tableName="series">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="work_id" type="BIGINT">
                <constraints nullable="false" unique="true" references="work(id)" foreignKeyName="fk_series_work"/>
            </column>
            <column name="director" type="VARCHAR(255)"/>
            <column name="year" type="INTEGER"/>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <comment>work (с content_key), movies, movies_content, series</comment>
    </changeSet>

</databaseChangeLog>
