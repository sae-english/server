<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-episode-tables" author="english-movies">
        <createTable tableName="episode">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="work_id" type="BIGINT">
                <constraints nullable="false" references="work(id)" foreignKeyName="fk_episode_work"/>
            </column>
            <column name="season" type="INTEGER"/>
            <column name="episode_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="episode_title" type="VARCHAR(500)"/>
            <column name="content_key" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="episode" columnNames="work_id, season, episode_number"
            constraintName="uq_episode_work_season_number"/>
        <addUniqueConstraint tableName="episode" columnNames="content_key" constraintName="uq_episode_content_key"/>
        <createTable schemaName="englishmovies" tableName="episode_content">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="episode_id" type="BIGINT">
                <constraints nullable="false" unique="true" references="episode(id)" foreignKeyName="fk_episode_content_episode"/>
            </column>
            <column name="content" type="JSONB"/>
            <column name="credits" type="JSONB"/>
            <column name="note" type="TEXT"/>
        </createTable>
        <comment>episode (—Å content_key), episode_content</comment>
    </changeSet>

</databaseChangeLog>
